{% extends 'base.html.twig' %}

{% block title %}Détails du trajet #{{ trip.id_trajet }}
{% endblock %}

{% block body %}

	<h2>
		Détails du trajet
		{{ trip.chauffeur }}</h2>


	<div class="card h-100 shadow-sm">
		<div class="card-body">
			<h5 class="card-title">
				<i class="bi bi-geo-fill text-success"></i>
				{{trip.adresse_depart}}
				<i class="bi bi-arrow-right mx-1"></i>
				<i class="bi bi-geo-alt-fill text-danger"></i>
				{{trip.adresse_arrivee}}
			</h5>
			<p class="card-text mb-2">
				<i class="bi bi-calendar3"></i>
				{{ trip.date_depart|date('d/m/Y H:i') }}
			</p>
			<div class="d-flex justify-content-between align-items-center">
				<span class="badge bg-success fs-5">
					<i class="bi bi-coin"></i>
					{{ trip.prix }}
					crédits


				</span>
				<span>
					<i class="bi bi-people-fill"></i>
					{{ trip.places_restantes }}
					place{{ trip.places_restantes > 1 ? 's' }}
				</span>
				<span>
					<i class="bi bi-person-circle"></i>
					{{ trip.chauffeur }}
				</span>
			</div>
			<div>
				<h3>Véhicule de
					{{ trip.chauffeur }}</h3>
				<p>Marque :
					{{ trip.vehicule_marque}}</p>
				<p>Modele :
					{{ trip.vehicule_modele}}</p>
				<p>Electrique :{{ trip.vehicule_electrique ? 'Oui' : 'Non' }}
				</p>
			</div>
			<div class="card-footer bg-transparent border-top-0 text-center">
				<a href="#" class="btn btn-outline-primary btn-sm">
					Réserver ce trajet
				</a>
			</div>
		</div>
	</div>


	<div class="text-center m-5">
		<a class="btn btn-primary btn-lg px-4 me-md-2" href="/">Retour à l'accueil</a>
	</div>

{% endblock %}
