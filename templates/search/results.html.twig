{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche
{% endblock %}

{% block body %}

	<h2>Trajets de
		{{ depart }}
		à
		{{ arrivee }}
		le
		{{ date|date('d/m/Y') }}</h2>

	{% if rides is empty %}
		<p class="alert alert-warning">Aucun trajet trouvé.</p>
	{% else %}
		<ul class="list-group">
			{% for ride in rides %}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<div>
						<strong>{{ride.driver}}</strong>
						-
						{{ride.vehicle}}</div>
					<div>
						De
						{{ride.depart}}
						à
						{{ride.arrivee}}
						le
						{{ride.date|date('d/m/Y')}}
					</div>
					<div>{{ride.price}}€</div>
					<a href="#" class="btn btn-sm btn-outline-primary">Voir le trajet</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}

	<a href="/" class="btn btn-sm btn-primary">Retour à l'accueil</a>
{% endblock %}
